<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="MyTheme.Base" />

    <style name="MyTheme.Splash" parent="MyTheme.Base">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base theme applied no matter what API -->
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <item name="colorAccent">@color/color_accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated, colorControlHighlight and colorSwitchThumbNormal. -->
    </style>

    <!--- Toolbar -->
    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="toolbar_popup_theme" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Spinner -->
    <style name="spinner_item">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/spinner_item_padding</item>
    </style>
    <style name="spinner_drop_down_item">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/spinner_drop_down_item_padding</item>
    </style>

    <!-- ToggleButton -->
    <style name="toggle_button" parent="android:Widget">
        <item name="android:textOff">@string/toggle_button_off</item>
        <item name="android:textOn">@string/toggle_button_on</item>
    </style>

    <!-- Texts -->
    <style name="text_small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="text_medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="text_large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>